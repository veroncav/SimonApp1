<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimonApp1.Views.SettingsPage"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <Label x:Name="LabelSettings"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Theme -->
            <Border Padding="15" Background="{DynamicResource CardColor}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                    <Label x:Name="LabelTheme" VerticalOptions="Center" />
                    <Picker x:Name="ThemePicker"
                            WidthRequest="150"
                            SelectedIndexChanged="OnThemeChanged">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Light</x:String>
                                <x:String>Dark</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </HorizontalStackLayout>
            </Border>

            <!-- Sound -->
            <Border Padding="15" Background="{DynamicResource CardColor}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                    <Label x:Name="LabelSound" VerticalOptions="Center" />
                    <Switch x:Name="SoundSwitch" Toggled="OnSoundToggled" />
                </HorizontalStackLayout>
            </Border>

            <!-- Max rounds -->
            <Border Padding="15" Background="{DynamicResource CardColor}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                    <Label x:Name="LabelMaxRounds" VerticalOptions="Center" />
                    <Slider x:Name="MaxRoundsSlider"
                            Minimum="5"
                            Maximum="30"
                            ValueChanged="OnMaxRoundsChanged"/>
                    <Label x:Name="MaxRoundsValue" VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <!-- Language -->
            <Border Padding="15" Background="{DynamicResource CardColor}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                    <Label x:Name="LabelLanguage" VerticalOptions="Center" />
                    <Picker x:Name="LanguagePicker"
                            WidthRequest="150"
                            SelectedIndexChanged="OnLanguageChanged"/>
                </HorizontalStackLayout>
            </Border>

            <!-- Back Button -->
            <Button x:Name="ButtonBack"
                    Clicked="OnBackClicked"
                    BackgroundColor="#0078D7"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="50"
                    Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
