<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimonApp1.App">

    <Application.Resources>
        <ResourceDictionary>

            <!-- 🌗 Основные динамические цвета -->
            <Color x:Key="BackgroundColor">#FFFFFF</Color>
            <Color x:Key="CardColor">#F4F4F4</Color>
            <Color x:Key="TextColor">#000000</Color>

            <!-- 🎨 Тематические цвета -->
            <Color x:Key="PrimaryBlue">#4A90FF</Color>
            <Color x:Key="PrimaryBlueLight">#66D1FF</Color>

            <!-- 🟦 Градиент заголовка -->
            <LinearGradientBrush x:Key="TitleGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource PrimaryBlueLight}" Offset="0.1"/>
                <GradientStop Color="{StaticResource PrimaryBlue}" Offset="0.9"/>
            </LinearGradientBrush>

            <!-- ✨ Красивый заголовок -->
            <Style x:Key="TitleStyle" TargetType="Label">
                <Setter Property="FontSize" Value="48"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="TextColor" Value="{StaticResource TextColor}"/>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="{StaticResource PrimaryBlue}"
                                Offset="0,4"
                                Radius="14"
                                Opacity="0.7"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 🔹 Кнопки меню -->
            <Style TargetType="Button" x:Key="MenuButtonStyle">
                <Setter Property="HeightRequest" Value="55"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryBlue}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="Black"
                                Offset="0,5"
                                Radius="14"
                                Opacity="0.38"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 🎮 Игровые кнопки -->
            <Style TargetType="Button" x:Key="GameButtonStyle">
                <Setter Property="CornerRadius" Value="40"/>
                <Setter Property="WidthRequest" Value="150"/>
                <Setter Property="HeightRequest" Value="150"/>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="Black"
                                Offset="0,6"
                                Radius="20"
                                Opacity="0.45"/>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
