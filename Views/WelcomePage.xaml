<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimonApp1.Views.WelcomePage"
             BackgroundColor="{AppThemeBinding Light=#F4F4F4, Dark=#1E1E1E}">

    <VerticalStackLayout Padding="40" Spacing="32" VerticalOptions="Center">

        <!-- Название игры -->
        <Label Text="SIMON SAYS"
               FontSize="48"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="{AppThemeBinding Light=#0077FF, Dark=#66B3FF}" />

        <!-- Кнопки -->
        <Button x:Name="StartGameButton"
                Text=""
                HeightRequest="55"
                CornerRadius="18"
                BackgroundColor="#7B4DFF"
                TextColor="White"
                FontSize="20"
                Clicked="OnStartGameClicked"/>

        <Button x:Name="ScoresButton"
                Text=""
                HeightRequest="55"
                CornerRadius="18"
                BackgroundColor="#3D85C6"
                TextColor="White"
                FontSize="20"
                Clicked="OnScoresClicked"/>

        <Button x:Name="SettingsButton"
                Text=""
                HeightRequest="55"
                CornerRadius="18"
                BackgroundColor="#5F5F5F"
                TextColor="White"
                FontSize="20"
                Clicked="OnSettingsClicked"/>

    </VerticalStackLayout>

</ContentPage>
