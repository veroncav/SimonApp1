<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimonApp1.Views.WelcomePage"
             BackgroundColor="{AppThemeBinding Light=#F4F4F4, Dark=#1E1E1E}">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

        <!-- Заголовок тоже переведём -->
        <Label x:Name="TitleLabel"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Button x:Name="StartGameButton"
                Clicked="OnStartGameClicked"
                HeightRequest="50"
                CornerRadius="12"/>

        <Button x:Name="ScoresButton"
                Clicked="OnScoresClicked"
                HeightRequest="50"
                CornerRadius="12"/>

        <Button x:Name="SettingsButton"
                Clicked="OnSettingsClicked"
                HeightRequest="50"
                CornerRadius="12"/>

    </VerticalStackLayout>

</ContentPage>
