<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SimonApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SimonApp1.Views">

    <ShellContent
        Route="WelcomePage"
        ContentTemplate="{DataTemplate views:WelcomePage}" />

    <ShellContent
        Route="MainPage"
        ContentTemplate="{DataTemplate views:MainPage}" />

    <ShellContent
        Route="SettingsPage"
        ContentTemplate="{DataTemplate views:SettingsPage}" />

    <ShellContent
        Route="ScoresPage"
        ContentTemplate="{DataTemplate views:ScoresPage}" />

    <ShellContent
        Route="RulesPage"
        ContentTemplate="{DataTemplate views:RulesPage}" />

</Shell>
