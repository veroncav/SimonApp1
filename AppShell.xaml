<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SimonApp1.Views"
    x:Class="SimonApp1.AppShell">

    <!-- Стартовая страница -->
    <ShellContent
        Title="Welcome"
        ContentTemplate="{DataTemplate views:WelcomePage}"
        Route="WelcomePage" />

    <!-- Игра -->
    <ShellContent
        Title="Game"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage"
        IsVisible="False" />

    <!-- Настройки -->
    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="SettingsPage"
        IsVisible="False" />
</Shell>
