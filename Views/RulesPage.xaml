<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:SimonApp1.Resources.Localization"
             x:Class="SimonApp1.Views.RulesPage"
             BackgroundColor="{AppThemeBinding Light=#F4F4F4, Dark=#121212}">

    <VerticalStackLayout Padding="30" Spacing="20">

        <Label Text="{x:Static res:AppResources.Rules}"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="{AppThemeBinding Light=Black, Dark=White}" />

        <Label Text="{x:Static res:AppResources.RulesText}"
               FontSize="18"
               TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />

        <Button Text="{x:Static res:AppResources.Back}"
                BackgroundColor="#7B4DFF"
                TextColor="White"
                CornerRadius="12"
                FontAttributes="Bold"
                HeightRequest="50"
                Clicked="OnBackClicked"/>

    </VerticalStackLayout>

</ContentPage>
