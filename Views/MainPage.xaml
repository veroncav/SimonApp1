<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimonApp1.Views.MainPage"
             BackgroundColor="{AppThemeBinding Light=#F4F4F4, Dark=#1E1E1E}">

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" Padding="20" RowSpacing="20">

        <!-- Название игры -->
        <Label x:Name="TitleLabel"
               Text="Саймон"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Имя игрока -->
        <Entry x:Name="NameEntry"
               Grid.Row="1"
               Placeholder="Введите имя игрока" />

        <!-- Очки -->
        <Label Grid.Row="2"
               Text="Очки:"
               FontSize="20"
               HorizontalOptions="Center" />
        <Label x:Name="ScoreLabel"
               Grid.Row="2"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="End" />

        <!-- Игровое поле -->
        <Grid Grid.Row="3"
              ColumnDefinitions="*,*"
              RowDefinitions="*,*"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              ColumnSpacing="10" RowSpacing="10">

            <Button x:Name="GreenButton" BackgroundColor="Green" Clicked="OnColorClicked"/>
            <Button x:Name="RedButton" Grid.Column="1" BackgroundColor="Red" Clicked="OnColorClicked"/>
            <Button x:Name="BlueButton" Grid.Row="1" BackgroundColor="Blue" Clicked="OnColorClicked"/>
            <Button x:Name="YellowButton" Grid.Row="1" Grid.Column="1" BackgroundColor="Yellow" Clicked="OnColorClicked"/>

        </Grid>

        <!-- Кнопки -->
        <StackLayout Grid.Row="4" Orientation="Horizontal" Spacing="15" HorizontalOptions="Center">

            <Button x:Name="StartButton"
                    Text="Старт"
                    Clicked="OnStartClicked"
                    WidthRequest="120"/>

            <Button x:Name="RestartButton"
                    Text="Заново"
                    Clicked="OnRestartClicked"
                    WidthRequest="120"/>

            <Button x:Name="SaveScoreButton"
                    Text="Сохранить"
                    Clicked="OnSaveScoreClicked"
                    WidthRequest="120"/>

        </StackLayout>

        <!-- Окошко результата -->
        <Grid x:Name="Overlay"
              Grid.RowSpan="5"
              BackgroundColor="#80000000"
              IsVisible="False"
              VerticalOptions="Fill" HorizontalOptions="Fill">

            <Frame BackgroundColor="White" CornerRadius="14" Padding="20"
                   VerticalOptions="Center" HorizontalOptions="Center">

                <StackLayout Spacing="15" HorizontalOptions="Center">
                    <Label x:Name="ResultTitle" FontSize="26" HorizontalOptions="Center"/>
                    <Label x:Name="ResultText" FontSize="20" HorizontalOptions="Center"/>

                    <Button Text="ОК" Clicked="OnRestartClicked" WidthRequest="120"/>
                </StackLayout>

            </Frame>
        </Grid>

    </Grid>
</ContentPage>
