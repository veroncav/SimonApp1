<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:SimonApp1.Resources.Localization"
             x:Class="SimonApp1.Views.MainPage"
             BackgroundColor="{AppThemeBinding Light=#F4F4F4, Dark=#121212}">

    <Grid>

        <!-- Кнопка звука -->
        <Button x:Name="SoundToggleButton"
                Text="🔊"
                Clicked="OnSoundToggleClicked"
                BackgroundColor="Transparent"
                FontSize="30"
                Padding="8"
                Margin="10"
                HorizontalOptions="End"
                VerticalOptions="Start"
                ZIndex="100"/>

        <VerticalStackLayout Padding="30" Spacing="18" VerticalOptions="Center" HorizontalOptions="Center">

            <Label Text="Simon Says"
                   FontSize="42"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                   HorizontalOptions="Center" />

            <!-- Очки -->
            <Label Text="{x:Static resources:AppResources.Score}"
                   TextColor="{AppThemeBinding Light=#444444, Dark=#CCCCCC}"
                   HorizontalOptions="Center"/>

            <Label x:Name="ScoreLabel"
                   Text="0"
                   FontSize="45"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                   HorizontalOptions="Center" />

            <!-- Поле с цветными кнопками -->
            <Grid HorizontalOptions="Center"
                  ColumnDefinitions="150,150"
                  RowDefinitions="150,150"
                  RowSpacing="18" ColumnSpacing="18">

                <Button x:Name="GreenButton"
                        Grid.Row="0" Grid.Column="0"
                        BackgroundColor="#00C853"
                        CornerRadius="30"
                        Clicked="OnColorClicked"/>

                <Button x:Name="RedButton"
                        Grid.Row="0" Grid.Column="1"
                        BackgroundColor="#D50000"
                        CornerRadius="30"
                        Clicked="OnColorClicked"/>

                <Button x:Name="BlueButton"
                        Grid.Row="1" Grid.Column="0"
                        BackgroundColor="#2962FF"
                        CornerRadius="30"
                        Clicked="OnColorClicked"/>

                <Button x:Name="YellowButton"
                        Grid.Row="1" Grid.Column="1"
                        BackgroundColor="#FFD600"
                        CornerRadius="30"
                        Clicked="OnColorClicked"/>
            </Grid>

            <!-- Старт -->
            <Button x:Name="StartButton"
                    Text="{x:Static resources:AppResources.Start}"
                    HeightRequest="55"
                    CornerRadius="16"
                    BackgroundColor="#7B4DFF"
                    TextColor="White"
                    FontAttributes="Bold"
                    Clicked="OnStartClicked"/>
        </VerticalStackLayout>

        <!-- Окно ввода имени -->
        <Grid x:Name="NamePopup"
              BackgroundColor="#80000088"
              IsVisible="True"
              ZIndex="10">

            <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#2B2B2B}"
                   Padding="25"
                   CornerRadius="18"
                   WidthRequest="260"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   HasShadow="True">

                <VerticalStackLayout Spacing="14">

                    <Label Text="{x:Static resources:AppResources.EnterName}"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"
                           HorizontalOptions="Center" />

                    <Entry x:Name="PlayerNameEntry"
                           Placeholder="{x:Static resources:AppResources.Player}"
                           FontSize="18"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"
                           PlaceholderColor="{AppThemeBinding Light=#777777, Dark=#BBBBBB}"
                           BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#3A3A3A}" />

                    <Button Text="{x:Static resources:AppResources.Ok}"
                            CornerRadius="10"
                            BackgroundColor="#7B4DFF"
                            TextColor="White"
                            FontAttributes="Bold"
                            Clicked="OnConfirmNameClicked"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>
