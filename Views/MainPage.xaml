<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimonApp1.Views.MainPage"
             BackgroundColor="{AppThemeBinding Light=#F4F4F4, Dark=#121212}">

    <Grid>

        <!-- Игровой экран -->
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">

            <Label Text="SIMON SAYS"
                   FontSize="44"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#0077FF, Dark=#66B3FF}"
                   HorizontalOptions="Center" />

            <Label Text="Score:"
                   TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}"
                   HorizontalOptions="Center"/>

            <Label x:Name="ScoreLabel"
                   Text="0"
                   FontSize="48"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                   HorizontalOptions="Center" />

            <!-- Цветные кнопки -->
            <Grid HorizontalOptions="Center"
                  ColumnDefinitions="150,150"
                  RowDefinitions="150,150"
                  RowSpacing="20" ColumnSpacing="20">

                <Button x:Name="GreenButton"
                        Grid.Row="0" Grid.Column="0"
                        BackgroundColor="#00C853"
                        CornerRadius="35"
                        Clicked="OnColorClicked"/>

                <Button x:Name="RedButton"
                        Grid.Row="0" Grid.Column="1"
                        BackgroundColor="#D50000"
                        CornerRadius="35"
                        Clicked="OnColorClicked"/>

                <Button x:Name="BlueButton"
                        Grid.Row="1" Grid.Column="0"
                        BackgroundColor="#2962FF"
                        CornerRadius="35"
                        Clicked="OnColorClicked"/>

                <Button x:Name="YellowButton"
                        Grid.Row="1" Grid.Column="1"
                        BackgroundColor="#FFD600"
                        CornerRadius="35"
                        Clicked="OnColorClicked"/>
            </Grid>

            <Button x:Name="StartButton"
                    Text="Start"
                    HeightRequest="60"
                    CornerRadius="20"
                    BackgroundColor="#7B4DFF"
                    TextColor="White"
                    FontAttributes="Bold"
                    Clicked="OnStartClicked"/>

        </VerticalStackLayout>


        <!-- Окно ввода имени -->
        <Grid x:Name="NamePopup"
              BackgroundColor="#80000088"
              IsVisible="True"
              VerticalOptions="Fill"
              HorizontalOptions="Fill"
              ZIndex="10">

            <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#2B2B2B}"
                   Padding="25"
                   CornerRadius="20"
                   WidthRequest="280"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   HasShadow="True">

                <VerticalStackLayout Spacing="14">

                    <Label Text="Enter your name"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"
                           HorizontalOptions="Center" />

                    <Entry x:Name="PlayerNameEntry"
                           Placeholder="Player"
                           FontSize="18"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"
                           PlaceholderColor="{AppThemeBinding Light=#888888, Dark=#BBBBBB}"
                           BackgroundColor="{AppThemeBinding Light=#EFEFEF, Dark=#3A3A3A}" />

                    <Button Text="OK"
                            CornerRadius="12"
                            BackgroundColor="#7B4DFF"
                            TextColor="White"
                            FontAttributes="Bold"
                            Clicked="OnConfirmNameClicked"/>
                </VerticalStackLayout>

            </Frame>
        </Grid>

    </Grid>
</ContentPage>
