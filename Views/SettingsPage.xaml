<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimonApp1.Views.SettingsPage"
             Title="Seaded"
             BackgroundColor="{AppThemeBinding Light=#F4F4F4, Dark=#1E1E1E}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <Label Text="Rakenduse seaded"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Teema -->
            <Border Padding="15" Background="{AppThemeBinding Light=#FFFFFF, Dark=#2C2C2C}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                    <Label Text="Teema" VerticalOptions="Center" />
                    <Picker x:Name="ThemePicker"
                            WidthRequest="150"
                            SelectedIndexChanged="OnThemeChanged">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Light</x:String>
                                <x:String>Dark</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </HorizontalStackLayout>
            </Border>

            <!-- Heli -->
            <Border Padding="15" Background="{AppThemeBinding Light=#FFFFFF, Dark=#2C2C2C}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                    <Label Text="Heli" VerticalOptions="Center" />
                    <Switch x:Name="SoundSwitch" Toggled="OnSoundToggled" />
                </HorizontalStackLayout>
            </Border>

            <!-- Keel -->
            <Border Padding="15" Background="{AppThemeBinding Light=#FFFFFF, Dark=#2C2C2C}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                    <Label Text="Keel" VerticalOptions="Center" />
                    <Picker x:Name="LanguagePicker"
                            WidthRequest="150"
                            SelectedIndexChanged="OnLanguageChanged">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Eesti</x:String>
                                <x:String>English</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </HorizontalStackLayout>
            </Border>

            <!-- Tagasi -->
            <Button Text="Tagasi"
                    Clicked="OnBackClicked"
                    BackgroundColor="#0078D7"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="50"
                    Margin="0,20,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
